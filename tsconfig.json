{
  "compilerOptions": {
    "baseUrl": "src/",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "build/",
    "paths": {
      "@entities/*": ["entities/*"],
      "@helpers/*": ["helpers/*"],
      "@router/*": ["router/*"],
      "@services/*": ["services/*"],
      "@plugins/*": ["plugins/*"],
      "@config/*": ["config/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", ".eslintrc.js"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
