{
    "compilerOptions": {
        "baseUrl": "src/",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "outDir": "build/",
        "paths": {
            "@controllers/*": ["controllers/*"],
            "@helpers/*": ["helpers/*"],
            "@models/*": ["models/*"],
            "@router/*": ["router/*"],
            "@services/*": ["services/*"],
            "@config/*": ["config/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ES2019"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", ".eslintrc.js"],
    "ts-node": {
        "files": true,
        "require": ["tsconfig-paths/register"]
    }
}
